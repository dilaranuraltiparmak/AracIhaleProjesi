<script src="/Content/pluto-1.0.0/js/perfect-scrollbar.min.js"></script>
<script>var ps = new PerfectScrollbar('#sidebar');</script>
<!-- custom js -->
<script src="/Content/pluto-1.0.0/js/custom.js"></script>
</body>
</html>

