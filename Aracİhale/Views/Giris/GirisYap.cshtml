<body class="inner_page login">
    <div class="full_container">
        <div class="container">
            <div class="center verticle_center full_height">
                <div class="login_section">
                    <div class="logo_login">
                        <div class="center">
                            <img width="210" src="/Content/pluto-1.0.0/images/logo/logo_icon.png" alt="#" />
                        </div>
                    </div>

                    <div class="login_form">

                        @using (Html.BeginForm("GirisYap", "Giris", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <form>
                                <fieldset>
                                    <div class="field">
                                        @Html.LabelFor(m => m.KullaniciAdi, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.KullaniciAdi, new { @class = "form-control", @Value = ViewBag.Username })

                                    </div>
                                    <div class="field">
                                        @Html.LabelFor(m => m.Sifre, new { @class = "form-label" })
                                        @Html.PasswordFor(m => m.Sifre, new { @class = "form-control", @Value = ViewBag.Password })

                                    </div>



                                    <div class="checkbox mb-md-4">
                                        <label>
                                            <input type="checkbox" name="hatirla" value="true" @(ViewBag.Remember == true ? "checked" : "")> Beni Hatırla
                                        </label>
                                    </div>
                                  

                                    <div class="field margin_0">
                                        <label class="label_field hidden">hidden label</label>
                                        <button class="main_bt" >Giriş Yap</button>
                                    </div>
                                </fieldset>
                            </form>
                        }
                        @if (ViewBag.Error != null)
                        {
                          
                                <script>

                                     alert("@ViewBag.Error");
                                  
                                </script>
                         

                            @*<div class="alert alert-danger">
                @ViewBag.Error
            </div>*@
                        }


                    </div>

                </div>
            </div>
        </div>
    </div>

<!-- jQuery -->
<script src="/Content/pluto-1.0.0/js/jquery.min.js"></script>
<script src="/Content/pluto-1.0.0/js/popper.min.js"></script>
