            <input type="submit" name="name" value="TramerBilgisi" class="btn btn-primary" />
        </div>

        <div class="col-md-4 d-flex justify-content-end">
            <input type="submit" name="name" value="İlanBilgisi" class="btn btn-primary" />
        </div>
